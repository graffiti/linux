#include "imx53.dtsi"

/ {
	model = "TQ TQMa53";
	compatible = "tq,tqma53", "fsl,imx53";

	memory {
		reg = <0x70000000 0x40000000>; /* Up to 1GiB */
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_3p3v: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};
	};
};

&esdhc3 { /* EMMC */
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_esdhc3>;
	vmmc-supply = <&reg_3p3v>;
	non-removable;
	bus-width = <8>;
	status = "okay";
};

&iomuxc {
	imx53-tqma53 {
		pinctrl_esdhc3: esdhc3grp {
			fsl,pins = <
				MX53_PAD_PATA_DATA8__ESDHC3_DAT0	0x1d2
				MX53_PAD_PATA_DATA9__ESDHC3_DAT1	0x1d2
				MX53_PAD_PATA_DATA10__ESDHC3_DAT2	0x1d2
				MX53_PAD_PATA_DATA11__ESDHC3_DAT3	0x1d2
				MX53_PAD_PATA_DATA0__ESDHC3_DAT4	0x1d2
				MX53_PAD_PATA_DATA1__ESDHC3_DAT5	0x1d2
				MX53_PAD_PATA_DATA2__ESDHC3_DAT6	0x1d2
				MX53_PAD_PATA_DATA3__ESDHC3_DAT7	0x1d2
				MX53_PAD_PATA_RESET_B__ESDHC3_CMD	0x1f2
				MX53_PAD_PATA_IORDY__ESDHC3_CLK		0x1d2
			>;
		};

		pinctrl_i2c2: i2c2grp {
			fsl,pins = <
				MX53_PAD_KEY_ROW3__I2C2_SDA		0x400001ee
				MX53_PAD_KEY_COL3__I2C2_SCL		0x400001ee
			>;
		};

		pinctrl_pmic: pmicgrp {
			fsl,pins = <
				 MX53_PAD_PATA_DATA6__GPIO2_6    0x80000000 /* PMIC_INT */
				 MX53_PAD_GPIO_19__GPIO4_5 	 0x80000000 /* #SYSTEM_DOWN */
			>;
		};
	};
};

&i2c2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c2>;
	status = "okay";

	pmic: mc34708@8 {
		compatible = "fsl,mc34708";
		reg = <0x8>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_pmic>;
		fsl,mc13xxx-uses-rtc;
		interrupt-parent = <&gpio2>;
		interrupts = <6 4>; /* PATA_DATA6, active high */
	};

	sensor1: lm75@48 {
		compatible = "lm75";
		reg = <0x48>;
	};

	eeprom: 24c64@50 {
		compatible = "at,24c64";
		pagesize = <32>;
		reg = <0x50>;
	};
};
